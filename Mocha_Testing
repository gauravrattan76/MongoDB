Test.js

const mocha = require('mocha');
const assert = require('assert');

describe("some demo tests",function(){

    it("adds two numbers",function(){
       assert(2 + 3 ==5);
    });

    it("numbers should be equal",function(){
        assert(2 + 4 ==5);
     });
});

